<script>
    function calculateResult() {
        // Get all radio buttons with class 'formbold-input-radio'
        const radioButtons = document.querySelectorAll('.formbold-input-radio');

        // Initialize variables to count RED and YELLOW light clues
        let redLightCount = 0;
        let yellowLightCount = 0;

        // Loop through each radio button
        radioButtons.forEach((radioButton) => {
            // Check if the radio button is checked
            if (radioButton.checked) {
                // Get the value attribute of the checked radio button
                const value = parseFloat(radioButton.value);

                // Determine if the question is RED or YELLOW light
                if (value === 1) {
                    redLightCount++;
                } else if (value === 0.5) {
                    yellowLightCount++;
                }
            }
        });

        // Display result based on the counts
        const resultContainer = document.getElementById('result');
        if (redLightCount > 0) {
            resultContainer.innerText = "You should really consider endometriosis now. No one should be experiencing pain or symptoms this life-altering; it is not normal (no matter what your doctor may have told you).";
        } else if (yellowLightCount > 0) {
            resultContainer.innerText = "Be aware. These symptoms are often associated with endo, but could also be caused by something other than endo. For example, having some period pain and fatigue could be caused by things other than endometriosis, such as a zinc and iron deficiency. Your cat could cause your allergies. Really bad PMS could be caused by overeating sugar. But in general, if you have numerous yellow lights, these could easily indicate endometriosis as a possibility.";
        } else {
            resultContainer.innerText = "Thank you for taking the test. Based on your answers, there are no significant RED or YELLOW light clues for endometriosis. If you have concerns about your health, it's always recommended to consult with a healthcare professional.";
        }
    }
